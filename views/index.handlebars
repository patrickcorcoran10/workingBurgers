<h5>Burgers that are mouth watering!</h5>
<ul id="burger_board">
    {{#each burgers}}
        {{#unless this.devoured}}
        <li>
            <p>Burger Name: {{this.burger_name}}</p>
            <button id="devour">Devour</button>
        </li>
        {{/unless}}
    {{/each}}
</ul>


<h5>Burgers that are devoured!</h5>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            <div class="eaten">
                <div>
            <p>{{>burgers devoured=true}}</p>
            </div>
            </div>
        {{/if}}
    {{/each}}
</ul>
</div>

